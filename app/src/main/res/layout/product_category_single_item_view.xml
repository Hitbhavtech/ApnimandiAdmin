<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:id="@+id/ProductCategoryItemCardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_3sdp"
        card_view:contentPadding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ProductCategoryItemImageView"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_launcher_background"></ImageView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:text="Item Id :"></TextView>

                    <TextView
                        android:id="@+id/ProductCategoryItemIdTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:text="Name Id : 124"></TextView>

                </RelativeLayout>

                <View
                    android:layout_below="@+id/AddToCartActivityBottomRelativeLayoutSubTotalPriceTextView"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/gray_color"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_alignParentLeft="true"
                        android:text="Item Cur Off Price : "></TextView>

                    <TextView
                        android:id="@+id/ProductCategoryItemCutOffPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_alignParentRight="true"
                        android:text="Item Cut Off Price : 124"></TextView>
                </RelativeLayout>

                <View
                    android:layout_below="@+id/AddToCartActivityBottomRelativeLayoutSubTotalPriceTextView"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/gray_color"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:text="Item Price : "></TextView>

                    <TextView
                        android:id="@+id/ProductCategoryItemPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:text="Item Price  : 124"></TextView>

                </RelativeLayout>

                <View
                    android:layout_below="@+id/AddToCartActivityBottomRelativeLayoutSubTotalPriceTextView"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/gray_color"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:text="Item Name : "></TextView>

                    <TextView
                        android:id="@+id/ProductCategoryItemNameTextView"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Item Name  : 124"></TextView>

                </RelativeLayout>

                <View
                    android:layout_below="@+id/AddToCartActivityBottomRelativeLayoutSubTotalPriceTextView"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/gray_color"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:text="Item Weight : "></TextView>

                    <TextView
                        android:id="@+id/ProductCategoryItemWeightTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:text=" Item Weight  : 124"></TextView>

                </RelativeLayout>

                <View
                    android:layout_below="@+id/AddToCartActivityBottomRelativeLayoutSubTotalPriceTextView"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/gray_color"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:text="Item Category : "></TextView>

                    <TextView
                        android:id="@+id/ProductCategoryItemCategoryTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_alignParentRight="true"
                        android:text="Item Category  : 124"></TextView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nutrition Facts"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"></TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_5sdp">

                        <LinearLayout
                            android:id="@+id/ItemDescriptionActivityCalories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calories "
                                android:textColor="@color/black"></TextView>

                            <TextView
                                android:id="@+id/ProductCategoryItemCaloriesTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60"
                                android:textColor="@color/black"></TextView>

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_35sdp"
                            android:layout_toRightOf="@id/ItemDescriptionActivityCalories"
                            android:background="@color/black"></View>

                        <LinearLayout
                            android:id="@+id/ItemDescriptionActivityFat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fat"
                                android:textColor="@color/black"></TextView>

                            <TextView
                                android:id="@+id/ProductCategoryItemFatTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.4g"
                                android:textColor="@color/black"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ItemDescriptionActivityProtein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Protein"
                                android:textColor="@color/black"></TextView>

                            <TextView
                                android:id="@+id/ProductCategoryItemProteinTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.8g"
                                android:textColor="@color/black"></TextView>

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_35sdp"
                            android:layout_toRightOf="@id/ItemDescriptionActivityFat"
                            android:background="@color/black"></View>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/ProductCategoryMaterialItemDeleteButton"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:insetLeft="4dp"
                        android:layout_alignParentLeft="true"
                        android:text="@string/item_delete">

                    </com.google.android.material.button.MaterialButton>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/ProductCategoryMaterialIItemUpdateButton"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:insetLeft="4dp"
                        android:layout_alignParentRight="true"
                        android:text="@string/update">

                    </com.google.android.material.button.MaterialButton>


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
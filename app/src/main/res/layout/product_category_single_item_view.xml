<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:id="@+id/ProductCategoryItemCardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_3sdp"
        card_view:contentPadding="@dimen/_10sdp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <ImageView
               android:id="@+id/ProductCategoryItemImageView"
               android:layout_width="@dimen/_120sdp"
               android:layout_height="@dimen/_120sdp"
               android:scaleType="fitXY"
               android:layout_marginBottom="@dimen/_10sdp"
               android:src="@drawable/ic_launcher_background"></ImageView>

           <TextView
               android:id="@+id/ProductCategoryItemIdTextView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Name Id : 124"></TextView>

           <TextView
               android:id="@+id/ProductCategoryItemCutOffPriceTextView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Item Cut Off Price : 124"></TextView>

           <TextView
               android:id="@+id/ProductCategoryItemPriceTextView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Item Price  : 124"></TextView>

           <TextView
               android:id="@+id/ProductCategoryItemNameTextView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Item Name  : 124"></TextView>

           <TextView
               android:id="@+id/ProductCategoryItemWeightTextView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=" Item Weight  : 124"></TextView>

           <TextView
               android:id="@+id/ProductCategoryItemCategoryTextView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Item Category  : 124"></TextView>

           <Button
               android:id="@+id/ProductCategoryItemDeleteButtonView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/delete_button_txt"
               android:layout_gravity="center"></Button>

           <Button
               android:id="@+id/ProductCategoryItemUpdateButtonView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="@dimen/_10sdp"
               android:text="@string/update"></Button>

       </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProductCategoryActivity"
    android:id="@+id/ProductCategoryActivityRootView">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/productCategoryActivityToolbar"
        style="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/arrow_left_black_24dp"
        app:title="@string/product_category"
        app:titleTextColor="@color/black"></androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/productCategoryActivityToolbar"
        android:background="#e0e0e0"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">


        <androidx.cardview.widget.CardView xmlns:card_view="https://schemas.android.com/apk/res-auto"
            android:id="@+id/ProductCategoryActivityFruitsCardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:clickable="true"
            android:focusable="true"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">


            <TextView
                android:id="@+id/ProductCategoryActivityFruitsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/fruits"
                android:textColor="@color/black"
                android:textSize="@dimen/_24sdp"
                android:textStyle="bold"></TextView>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView xmlns:card_view="https://schemas.android.com/apk/res-auto"
            android:id="@+id/ProductCategoryActivityVegetablesCardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:clickable="true"
            android:focusable="true"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            android:layout_marginTop="@dimen/_10sdp">


            <TextView
                android:id="@+id/ProductCategoryActivityVegetablesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/vegetables"
                android:textColor="@color/black"
                android:textSize="@dimen/_24sdp"
                android:textStyle="bold"></TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>